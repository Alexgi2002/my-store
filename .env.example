# ============================================
# TIENDA - Configuración básica
# ============================================
STORE_NAME=my-store
PORT=3000

# ============================================
# APLICACIÓN - URLs y Configuración
# ============================================
# URL pública de la tienda
NEXT_PUBLIC_URL="http://localhost:3000"

# Número de WhatsApp (con código de país)
NEXT_PUBLIC_WHATSAPP_NUMBER="+5491234567890"

# ============================================
# ADMIN - Token para endpoints admin
# Use ADMIN_TOKEN as a secret header value (x-admin-token)
# ============================================
ADMIN_TOKEN="cambia-esto-por-secreto"

# ============================================
# PUSH (VAPID keys)
# Generar con: npx web-push generate-vapid-keys --json
# ============================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""

# ============================================
# TIENDA - Identidad runtime
# Puede ser URL a un icono público (ej: https://.../icon.jpg) o ruta en /public
# ============================================
STORE_ICON_URL="/icon.jpg"

# ============================================
# DATABASE - Postgres (required)
# Set DATABASE_URL to point to your Postgres instance
# Example: postgres://user:password@host:5432/dbname
# ============================================
DATABASE_URL="postgres://user:password@host:5432/dbname"

# If true, some endpoints will read/write push subscriptions locally in Postgres
USE_PG=true
